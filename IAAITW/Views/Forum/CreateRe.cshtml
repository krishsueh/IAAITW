@model IAAITW.Models.BoardReply

@{
    ViewBag.Title = "CreateRe";
    Layout = "~/Views/Shared/Member_Layout.cshtml";
}

<h2 class="page-title">討論區</h2>
<hr class="botmargin-min">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="col-sm-2 control-label">標 題：@ViewBag.Subject</label>
        </div>

        <div class="form-group">
            @Html.TextAreaFor(model => model.ReplyArticle, new { @class = "ckeditor", name = "replyArticle" })
            @Html.ValidationMessageFor(model => model.ReplyArticle, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => model.Replyer)
        @Html.HiddenFor(model => model.ReplyDate)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary solid blank" type="submit">回 覆</button>
            </div>
        </div>
    </div>
}
<script>
    var editor = CKEDITOR.replace('ckeditor');
    CKFinder.setupCKEditor(editor);
</script>


