@using MvcPaging
@model MvcPaging.IPagedList<IAAITW.Models.CMSAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    <h5>帳號管理</h5>
</div>

<div class="card-block">
    <p>
        @Html.ActionLink("新增帳號", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().MyIdentity.Identity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.MyIdentity.Identity)
                </td>
                <td class="align-middle">
                    <a href="@Url.Action("Details","Accounts", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="align-middle">
                    <div class="d-flex">
                        @Html.ActionLink("編輯", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-secondary" })

                        @using (Html.BeginForm("Delete", "Accounts", new { id = item.Id }, FormMethod.Post, new { onsubmit = "return confirm('確定要刪除嗎?');" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger">刪除</button>
                        }
                    </div>
                </td>
            </tr>
        }
    </table>

    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
    </div>
</div>