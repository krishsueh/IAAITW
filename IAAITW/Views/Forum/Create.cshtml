@model IAAITW.Models.Board

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Member_Layout.cshtml";
}

<h2 class="page-title">討論區</h2>
<hr class="botmargin-min">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="col-sm-2 control-label">標 題：</label>
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "標題", name = "subject" } })
            </div>
        </div>

        <div class="form-group">
            @Html.TextAreaFor(model => model.Article, new { @class = "ckeditor", name = "article" })
            @Html.ValidationMessageFor(model => model.Article, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => model.Author)
        @Html.HiddenFor(model => model.PostDate)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary solid blank" type="submit">發 表</button>
            </div>
        </div>
    </div>
}
<script>
    var editor = CKEDITOR.replace('ckeditor');
    CKFinder.setupCKEditor(editor);
</script>


