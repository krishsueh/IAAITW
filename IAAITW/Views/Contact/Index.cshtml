@using Recaptcha.Web
@using Recaptcha.Web.Mvc
@model IAAITW.Models.ViewModel.Contact

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Contact_Layout.cshtml";
}

<h2 class="page-title">聯絡我們</h2>
<hr class="botmargin-min">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        <div class="form-group">
            <label class="col-sm-2 control-label">姓　名：</label>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <div class="col-sm-7">
                <input class="form-control" id="Name" name="Name" placeholder="請輸入姓名" type="text" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">性　別：</label>
            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            <div class="col-sm-7">
                @Html.EnumDropDownListFor(model => model.Gender, htmlAttributes: new { @class = "form-control", placeholder = "請輸入性別" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">聯絡電話：</label>
            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
            <div class="col-sm-7">
                <input class="form-control" id="Tel" name="Tel" placeholder="請輸入聯絡電話" type="text" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">E-mail：</label>
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <div class="col-sm-7">
                <input class="form-control" id="Email" name="Email" placeholder="請輸入E-Mail" type="text" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">詢問標題：</label>
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            <div class="col-sm-7">
                <input class="form-control" id="Subject" name="Subject" placeholder="請輸入名稱" type="text" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">詢問內容：</label>
            <div class="col-sm-10">
                <textarea class="form-control form-control-message" cols="20" id="Article" name="Article" placeholder="請輸入內容" rows="2" style="height: 150px"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                @Html.Recaptcha()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary solid blank" type="submit">送 出</button>
            </div>
        </div>
    </div>
}
