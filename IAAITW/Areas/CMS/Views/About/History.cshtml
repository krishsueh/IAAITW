@model IAAITW.Models.About

@{
    ViewBag.Title = "History";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    <h5>沿革</h5>
</div>

<div class="card-block">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.History, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.History, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(model => model.AboutUs)
            @Html.HiddenFor(model => model.Organization)
            @Html.HiddenFor(model => model.LicensedMember)
            @Html.HiddenFor(model => model.Expert)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="儲存" class="btn btn-block btn-primary" />
                </div>
            </div>
        </div>
    }
    <script>
        var editor = CKEDITOR.replace('ckeditor');
        CKFinder.setupCKEditor(editor);
    </script>
</div>


