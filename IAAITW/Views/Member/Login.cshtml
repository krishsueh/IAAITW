@model IAAITW.Models.Member

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LoginRegister_Layout.cshtml";
}

<h2 class="page-title">會員登入</h2>
<hr class="botmargin-min">
@using (Html.BeginForm("Login", "Member", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="title-normal">請輸入您的帳號及密碼</h3>
        <div class="form-group">
            <label class="col-sm-2 control-label">帳　號：</label>
            <div class="col-sm-8">
                <input class="form-control" placeholder="請輸入帳號" name="account">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">密　碼：</label>
            <div class="col-sm-8">
                <input class="form-control" placeholder="請輸入密碼" name="password" type="password">
            </div>
        </div>

        <div>
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-8">
                <div class="text-danger">@ViewBag.Msg</div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary solid blank" type="submit">登 入</button>
            </div>
        </div>
        <hr>
        <div class="text-left">
            <a href="@Url.Action("Register","Member")">尚未註冊</a>
        </div>
    </div>
}
